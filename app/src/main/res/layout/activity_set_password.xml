<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/hall_page_background"
    android:orientation="vertical">

    <include layout="@layout/view_title_bar" />

    <ImageView
        android:id="@+id/iv_gen_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/gen_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_account_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/account_head"
        app:layout_constraintBottom_toTopOf="@id/iv_set_huakuang"
        app:layout_constraintEnd_toEndOf="@id/iv_set_huakuang"
        app:layout_constraintStart_toStartOf="@id/iv_set_huakuang" />

    <ImageView
        android:id="@+id/iv_set_huakuang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/huakuang"
        app:layout_constraintBottom_toBottomOf="@id/iv_gen_bg"
        app:layout_constraintEnd_toEndOf="@id/iv_gen_bg"
        app:layout_constraintStart_toStartOf="@id/iv_gen_bg"
        app:layout_constraintTop_toTopOf="@id/iv_gen_bg" />


    <LinearLayout
        android:id="@+id/ll_jiaoyi_pwd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:background="@mipmap/xuankuang"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/iv_set_huakuang"
        app:layout_constraintTop_toTopOf="@id/iv_set_huakuang">

        <TextView
            android:id="@+id/tv_jiaoyi_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="输入交易密码:"
            android:textColor="@color/colorWhite" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_jiaoyi_pwd_again"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:background="@mipmap/xuankuang"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/iv_set_huakuang"
        app:layout_constraintTop_toBottomOf="@id/ll_jiaoyi_pwd">

        <TextView
            android:id="@+id/tv_jiaoyi_pwd_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="再次确认交易密码:"
            android:textColor="@color/colorWhite" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_tishi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="提示: 密码为9-12位字母和数字组合,不能有特殊符号"
        android:textColor="@color/colorWhite"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="@id/ll_jiaoyi_pwd_again"
        app:layout_constraintStart_toStartOf="@id/ll_jiaoyi_pwd_again"
        app:layout_constraintTop_toBottomOf="@id/ll_jiaoyi_pwd_again" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="请牢记并妥善保管新密码,祝您游戏愉快"
        android:textColor="@color/colorWhite"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="@id/tv_tishi"
        app:layout_constraintStart_toStartOf="@id/tv_tishi"
        app:layout_constraintTop_toBottomOf="@id/tv_tishi" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:src="@mipmap/sure_submit"
        app:layout_constraintBottom_toBottomOf="@+id/iv_set_huakuang"
        app:layout_constraintEnd_toEndOf="@id/iv_set_huakuang"
        app:layout_constraintStart_toStartOf="@id/iv_set_huakuang" />

</android.support.constraint.ConstraintLayout>