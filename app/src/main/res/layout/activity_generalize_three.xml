<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/hall_page_background"
    android:orientation="vertical">

    <include
        android:id="@+id/include"
        layout="@layout/view_title_bar" />

    <ImageView
        android:id="@+id/iv_gen_bg"
        android:layout_width="337dp"
        android:layout_height="459dp"
        android:scaleType="fitXY"
        android:background="@mipmap/tuiguangback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <ImageView
        android:id="@+id/erweima"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="56dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/iv_gen_bg"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/iv_gen_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_gen_bg" />

    <RelativeLayout
        android:id="@+id/fuzhilianjie"
        android:layout_width="265dp"
        android:layout_height="241dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/iv_gen_bg"
        app:layout_constraintRight_toRightOf="@id/iv_gen_bg"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_below="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_marginTop="-23dp"
            android:layout_marginBottom="-4dp"
            android:src="@mipmap/tiaotiaotiao" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="85dp"
            android:layout_marginTop="63dp"
            android:text="@string/tuijianrenid"
            android:textColor="#ffff" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/xiazaidizhi"
            android:layout_alignBottom="@+id/xiazaidizhi"
            android:layout_marginTop="-11dp"
            android:layout_marginBottom="-13dp"
            android:src="@mipmap/tiaotiaotiao" />
        <TextView
            android:id="@+id/xiazaidizhi"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="76dp"
            android:text="@string/appxiazaidizhi"
            android:textColor="#ffff"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>

    <TextView
        android:id="@+id/ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@mipmap/id"
        android:gravity="center"
        android:text=""
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="@+id/iv_gen_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_gen_bg" />

</android.support.constraint.ConstraintLayout>